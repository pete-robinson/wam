<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "bootstrap.php" >

    <testsuites>
        <testsuite name="Wam Test Suite">
            <directory>tests/Wam</directory>
            <directory>tests/Command</directory>
        </testsuite>
    </testsuites>

    <php>
        <server name="KERNEL_DIR" value="tests/SupportFiles" />
    </php>

    <filter>
        <whitelist>
            <directory>src/Wam</directory>
        </whitelist>
        <excludes>
            <directory>tests/SupportFiles</directory>
        </excludes>
    </filter>

    <logging>
        <log type="coverage-html" target="tmp/phpunit" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>

</phpunit>